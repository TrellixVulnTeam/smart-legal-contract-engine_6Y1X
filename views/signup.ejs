<%- include('partials/login-header') %>

<body>
    <div class="modal modal-signin position-static d-block py-5">
        <div class="modal-dialog">
            <div class="modal-content rounded-5 shadow">
                <div class="modal-header p-5 pb-4 border-bottom-0">
                    <h2 class="fw-bold mb-0">Crie uma conta grátis</h2>
                    <img src="/public/img/logo.png" alt="Smart Legal Contract Engine">
                </div>

                <div class="modal-body p-5 pt-0">
                    <form action="/signup" method="POST">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-4" id="email" name="email"
                                placeholder="name@example.com" required>
                            <label for="email">Endereço de email</label>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control rounded-4" id="firstName" name="firstName"
                                        placeholder="First Name">
                                    <label for="firstname">Primeiro nome</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control rounded-4" id="lastName" name="lastName"
                                        placeholder="Last Name">
                                    <label for="lastname">Ultimo nome</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-4" id="password" name="password"
                                placeholder="Password" required>
                            <label for="password">Password</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-4" id="repeatPassword"
                                name="repeatPassword" placeholder="Repeat Password" required>
                            <label for="repeatPassword">Repita a password</label>
                        </div>
                        <button class="w-100 mb-2 btn btn-lg rounded-4 btn-success" type="submit">Criar conta</button>
                        <!-- <small class="text-muted">By clicking Create account, you agree to the terms of use.</small> -->
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="../public/js/signup.js"></script>
    <%- include('partials/login-footer') %>